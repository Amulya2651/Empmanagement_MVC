<h1> Department Details </h1>

<button class="btn btn-primary" onclick="getDept()"> Show Departments </button>
<table class="table table-bordered table-striped"></table>


<script>
    function getDept()
    {
        var url = "https://localhost:7167/api/Departments";

        fetch(url).then(dataType => dataType.json())
            .then(productsResult => {

                for (var i = 0; i < productsResult.length; i++) {
                    $("table").append("<tr>" +
                        "<td>" + productsResult[i].deptno + "</td>" +
                        "<td>" + productsResult[i].deptname+ "</td>" +
                        "<td>" + productsResult[i].deptlocation+ "</td>" +
                        "<td>" + productsResult[i].deptemail + "</td>" +
                       

                    + "</tr>")
                }

            })



    }
</script>